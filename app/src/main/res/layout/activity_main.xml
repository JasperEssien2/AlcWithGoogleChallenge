<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context=".MainActivity">

        <TextView
                android:id="@+id/main_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ALC 4.0"
                android:textSize="48sp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline"/>

        <TextView
                android:id="@+id/main_header_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Andela Learning Community..."
                android:textSize="24sp"
                android:textColor="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.187"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/main_header"
                app:layout_constraintStart_toStartOf="@+id/main_header"
                app:layout_constraintEnd_toEndOf="@+id/main_header"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.23"/>

        <Button
                android:id="@+id/frame_profile"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/background_profile"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:drawableStart="@drawable/ic_user_alc"
                android:text="Profile"
                android:textSize="20sp"
                android:textColor="#232323"
                android:paddingStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="8dp"
                android:drawablePadding="16dp"
                android:gravity="start|center"
                app:layout_constraintTop_toTopOf="@+id/guideline3">


        </Button>

        <Button
                android:id="@+id/frame_about_us"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/background_button_about_us"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                android:drawableEnd="@drawable/ic_tag"
                android:text="About Us"
                android:textSize="20sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#232323"
                android:gravity="end|center"
                android:drawablePadding="16dp"
                app:layout_constraintBottom_toBottomOf="parent">


        </Button>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50121653"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.58"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>